<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDBG.CRM.MOBILE.LoginPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,25"
            VerticalOptions="Center">

            <Label
                Text="Вход"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Логин:"
                SemanticProperties.HeadingLevel="Level2"                
                FontSize="18"
                HorizontalOptions="Start" />

            <Entry  
                x:Name="LoginEntry"
                FontSize="18" />

            <Label
                Text="Пароль:"
                SemanticProperties.HeadingLevel="Level2"                
                FontSize="18"
                HorizontalOptions="Start" />
            
            <Entry  
                x:Name="PasswordEntry"
                IsPassword="True"
                FontSize="18" />

            <Button
                x:Name="EnterBtn"
                Text="Войти"                                
                HorizontalOptions="Center" 
                Clicked="EnterBtnClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
